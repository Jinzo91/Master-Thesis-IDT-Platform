{
  "name": "idt-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:generateMigration": "rm -r -f dist && npm run build && npm run typeorm migration:generate -- -n Migration",
    "typeorm:runMigration": "rm -r -f dist && npm run build && npm run typeorm migration:run",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cloud": "jest --runInBand --detectOpenHandles --forceExit --reporters=jest-junit",
    "test:e2e:cloud":"jest --config ./test/jest-e2e.json --reporters=jest-junit"
  },
  "dependencies": {
    "@mobizerg/nest-nodemailer": "^1.1.0",
    "@nestjs/common": "^6.11.4",
    "@nestjs/core": "^6.11.4",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.3.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.4",
    "@nestjs/serve-static": "^1.0.2",
    "@nestjs/swagger": "^4.2.3",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjsx/crud": "^4.4.1",
    "@nestjsx/crud-typeorm": "^4.4.1",
    "cache-manager": "^2.10.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "gulp": "^4.0.2",
    "handlebars": "^4.7.2",
    "moment": "^2.24.0",
    "mongo-gridfs": "^1.1.0",
    "mongoose": "^5.8.10",
    "mssql": "^6.0.1",
    "mysql": "^2.18.1",
    "nest-schedule": "^0.6.4",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.1",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.0",
    "@types/node": "^13.5.1",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.1.0",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.0.0",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0",
    "typescript": "3.7.5",
    "wait-on": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
